{
  "compileOnSave": false,
  "filesGlob": [
    "**/*.{ts,tsx}"
  ],
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "files": [
    "./src/app-bootstrap.tsx",
    "./types/index.d.ts"
  ]
}